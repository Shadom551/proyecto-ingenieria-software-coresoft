@* Pages/Home.razor *@
@page "/"

<div class="home-container">
    <h1>Bienvenido a HospitalBoxManager</h1>

    <div class="action-buttons">
        <button class="btn btn-primary" @onclick="NavigateToAppointment">
            <span class="bi bi-calendar-plus"></span> Agendar Hora
        </button>
    </div>
</div>

@code {
    [Inject] NavigationManager Navigation { get; set; }

    private void NavigateToAppointment()
    {
        Navigation.NavigateTo("seleccion-mes");
    }
}